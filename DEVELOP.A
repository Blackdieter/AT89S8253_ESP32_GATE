
    ; Start displaying entered numbers on second 7-segment display
    
	call display_entered
display_entered:
    ; Cycle through R0, R1, R2, R3 to display them on led2
    clr led1                      ; Disable main display
    setb led2                     ; Enable second 7-segment display

    ; Display R0
    mov a, R0
    mov data_7seg, a
    call delay                    ; Delay to make digit visible

    ; Display R1
    mov a, R1
    mov data_7seg, a
    call delay                    ; Delay to make digit visible

    ; Display R2
    mov a, R2
    mov data_7seg, a
    call delay                    ; Delay to make digit visible

    ; Display R3
    mov a, R3
    mov data_7seg, a
    call delay                    ; Delay to make digit visible

    clr led2                      ; Disable second 7-segment display
    setb led1                     ; Enable main display
    ret                           ; Return to main